<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width"/>     

    <script src="javascripts/vendor/jquery-2.1.4.js"></script>  
    <script src="javascripts/vendor/angular.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="javascripts/vendor/highcharts-ng.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.3.7.js"></script>

    <script src="javascripts/angularApp.js"></script>
    <script src="javascripts/factories/stockFactory.js"></script>
    <script src="javascripts/controllers/firstpageController.js"></script>         
        
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css" integrity="sha384-aUGj/X2zp5rLCbBxumKTCw2Z50WgIr1vs/PFN4praOTvYXWlVyh2UtNUU0KAUhAX" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>

    <link href="stylesheets/main.css" rel="stylesheet" />

  </head>
  
  <body ng-app="MyApp" >
    <div class="container">
      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <p class="navbar-brand" id="appName">Chart the Stock Market</p>
          </div>
        </div><!--/.container-fluid -->
      </nav>

      <!-- Main component for a primary marketing message or call to action -->
        <div class="jumbotron" id="letsvote" ng-controller="firstpageController">
            <div id="stockform">  
                <form class="form-inline" role="form" ng-submit="addStock()">
                    <label >Add Stock Symbol:</label>
                    <div class="input-group">
                        <input  class="form-control col-xs-2 col-md-4" placeholder="stock symbol" ng-model="stockName" required>
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default" id="addBtn">add</button>
                        </span>
                    </div>
                </form>
            </div>
              <div id="chartContainer">
                <highchart id="chart1" config="chartConfig"></highchart>
            </div>  
            <div class="btn-group btn-group-justified btnwrapper">
                <div class="col-xs-6 col-md-2 list-group-item btn-default btn-sm clickDelete" ng-repeat="stock in stocks track by $index" ng-click="deleteStock($index)">
                    <span>{{stock.name}}</span>
                    <span class="glyphicon glyphicon-remove-circle trash"></span>
                </div>
            </div> 
        </div>
    </div> <!-- /container -->

  </body>
</html>  